    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/warm_background"
    tools:context=".SplashScreen">
    <View
        android:id="@+id/view_alpha"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D2000000"/>

